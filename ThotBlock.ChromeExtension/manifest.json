{
  "name": "ThotBlock",
  "description": "Removes streamers who walk the fine line of the twitch Terms of service when it comes to sexually suggestive content or nudity.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [ "storage", "scripting" ],
  "content_scripts": [
    {
      "matches": [ "https://*.twitch.tv/*" ],
      "js": [ "begone.js" ]
    }
  ],
  "host_permissions": [
    "https://*.twitch.tv/*",
    "https://gist.githubusercontent.com/pjmagee/d8147bead8e4a651541c558d761f6103/raw/b3f5b9de1d48fbb26634213f8fc14f837fcb743d/thots.json"
  ],
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  }
}