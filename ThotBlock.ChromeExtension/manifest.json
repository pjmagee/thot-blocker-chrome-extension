{
  "name": "ThotBlock",
  "description": "Removes streamers who walk the fine line of the twitch Terms of service when it comes to sexually suggestive content or nudity.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [ "storage" ],
  "content_scripts": [
    {
      "matches": [ "https://*.twitch.tv/*" ],
      "js": [ "begone.js" ]
    }
  ],
  "host_permissions": [
    "https://*.twitch.tv/*",
    "https://raw.githubusercontent.com/pjmagee/thot-blocker-chrome-extension/master/ThotBlock.ChromeExtension/streamers.json"
  ],
  "icons": {
    "16": "/images/16.png",
    "32": "/images/32.png",
    "48": "/images/48.png",
    "128": "/images/128.png"
  }
}